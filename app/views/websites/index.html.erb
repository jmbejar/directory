<h1>Website Listing</h1>
<h2><%= t("subtitle") %></h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= website.name %></td>
        <td><%= link_to 'Show', website %></td>
      </tr>
    <% end %>
  </tbody>
</table>
