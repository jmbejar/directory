<h2>Listing websites</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Url</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @websites.each do |website| %>
      <tr>
        <td><%= website.name %></td>
        <td><%= website.url %></td>
        <td><%= website.description %></td>
        <td><%= link_to 'Show', admin_website_path(website) %></td>
        <td><%= link_to 'Edit', edit_admin_website_path(website) %></td>
        <td><%= link_to 'Destroy', admin_website_path(website), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Website', new_admin_website_path %>
